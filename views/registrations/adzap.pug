extends ../layout

block head-pack


block body-pack

	br
	br
	br
	br
	br

	.container
		.row
			.col-md-1
			.col-md-10
				h2.text-uppercase Ad-Zap

				form(action="#" method="post")
					.row
						.col-md-6
							.form-group
								label(for="name") Team Name
								input.form-control(type="text" name="name")
						.col-md-6
							.form-group
								label(for="size") Team Size
								input.form-control(type="number" name="size" min=1 max=4 step=1)
					.row
						.col-md-4
							.form-group
								label(for="leaderName") Leader Name
								input.form-control(type="text" name="leaderName")
						.col-md-4
							.form-group
								label(for="email") Leader Email
								input.form-control(type="email" name="email")
						.col-md-4
							.form-group
								label(for="university") University 
								input.form-control(type="university" name="university")
					.form-group
						label(for="member-2") Member 2 Full Name (REQUIRED)
						input.form-control(type="text" name="member-2")
					.form-group
						label(for="member-3") Member 3 Full Name (REQUIRED)
						input.form-control(type="text" name="member-3")
					.form-group
						label(for="member-4") Member 4 Full Name (OPTIONAL)
						input.form-control(type="text" name="member-4")
					.form-group
						label(for="member-5") Member 5 Full Name (OPTIONAL)
						input.form-control(type="text" name="member-5")
					
					button.btn-rounded.btn.btn-primary(type="submit") Pay Registration Fees
					
			.col-md-1

	br
	br