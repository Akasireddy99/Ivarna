extends ../layout

block head-pack
	script#bolt(src='https://sboxcheckout-static.citruspay.com/bolt/run/bolt.min.js', bolt-='', color='e34524', bolt-logo='http://boltiswatching.com/wp-content/uploads/2015/09/Bolt-Logo-e14421724859591.png')
	script(src="js/checkValidation.js" type="text/javascript")
	style(type='text/css').
		.main {
		margin-left: 30px;
		font-family: Verdana, Geneva, sans-serif, serif;
		}
		.text {
		float: left;
		width: 180px;
		}
		.dv {
		margin-bottom: 5px;
		}

block body-pack

	br
	br
	br
	br

	.container.bg-light#formContainer
		.row
			.col-md-4

				.col-md-12
					h3 Prices
					
					ul 
						li Cheaper One - 500/-
						li Expensive One - 800/-
			
					p *All attendents must carry a valid ID proof
			
			.col-md-8
				h3 Billing
				form#passesForm.needs-validation
					span#preCheckout
						.row
							.col-md-6
								.form-group
									label(for="firstName") First Name
									input#firstNameInput.form-control(type="text" name="firstName")
							.col-md-6
								.form-group
									label(for="lastName") Last Name
									input#lastNameInput.form-control(type="text" name="lastName")
						.form-group
							label(for="email") Email
							input#emailInput.form-control(type="email" name="email")
						.row
							.col-md-8
								.form-group
									label(for="phone") Phone
									input#phoneInput.form-control(type="number" name="phone")
							.col-md-4
								.form-group
									label(for="numPasses") Number of Passes
									select#numPassesSelect.form-control(name="numPasses") Number of Passes
										option(value="1") 1
										option(value="2") 2
										option(value="3") 3
										option(value="4") 4
										option(value="5") 5
										option(value="6") 6
					
						button#preCheckoutProceed.btn.btn-primary(type="submit") Proceed
					
					
				from#finalForm.needs-validation
					.row
						.col-md-6
							.form-group
								label(for="firstName") First Name
								input#finalFirstNameInput.form-control(type="text" readonly name="firstName")
						.col-md-6
							.form-group
								label(for="lastName") Last Name
								input#finalLastNameInput.form-control(type="text" readonly name="lastName")
					.form-group
						label(for="email") Email
						input#finalEmailInput.form-control(type="email" name="email" readonly)
					.row
						.col-md-8
							label(for="phone") Phone
							input#finalPhoneInput.form-control(type="number" readonly name="phone")
						.col-md-4
							label(for="numPasses") Number of Passes
							input#finalNumPasses.form-control(name="numPasses" readonly type="number")
					.form-group
						label(for="amount") Amount
						input#finalAmount.form-control(type="number" readonly name="amount")

					span#postCheckout
						
						button#checkout.btn.btn-primary(type="submit" style="visibility: hidden;") Checkout
	

	br
	br